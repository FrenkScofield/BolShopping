@model BolShpping.Models.BLL.SendMessage
@{
    ViewData["Title"] = "MoreDetailed";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 my-4">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                Muracietin etrafi goruntusu  <a asp-action="Index" class="float-right btn btn-outline-secondary">Geri cix</a>
            </div>
            <div class="card-body">
                <form asp-action="MoreDetailed">
                    <input type="hidden" asp-for="Id" />


                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" asp-for="Name" class="form-control" disabled />

                    </div>
