@model BolShpping.Models.VM.ViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow my-4">
            <div class="card-header py-4">
                Update Blog <a asp-action="Index" class="float-right btn btn-outline-secondary">Back to Index</a>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <fieldset class="radiogenel">
                                <legend>Add Image</legend>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="image">image</span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="hidden" name="category" value="">
                                        <input type="file" class="custom-file-input imginput" id="image1" multiple name="File" onchange="previewFile()">
                                        <label class="custom-file-label" for="category">Choose file</label>
                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-5">
                                    @foreach (var item in Model.BlogImages)
                                    {
                                        <img src="~/img/@item.ImageCode" id="img1" height="300" style="margin-bottom: 20px;" alt="no  image">
                                    }

                                </div>
                            </fieldset>
                          
                            <div class="form-group">
                                <label asp-for="@Model.Blog.Title" class="control-label"></label>
                                <input type="text" asp-for="@Model.Blog.Title" id="Name" class="form-control" />
                                <span  asp-validation-for="@Model.Blog.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Blog.Description" class="control-label"></label>
                                <textarea asp-for="@Model.Blog.Description" id="Name" class="form-control" style="height:140px;"></textarea>
                                <span asp-validation-for="@Model.Blog.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label asp-for="@Model.Blog.UserName" class="control-label"></label>
                                <input type="text" asp-for="@Model.Blog.UserName" id="Name" class="form-control" />
                                <span asp-validation-for="@Model.Blog.UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.Blog.DateTime" class="control-label">Date of production</label>
                                <input type="date" asp-for="@Model.Blog.DateTime" id="datetimepicker" value="2021-04-08" class="form-control" />
                                <span asp-validation-for="@Model.Blog.DateTime" class="text-danger"></span>
                            </div>

                        </div>
                        <input type="hidden" asp-for="@Model.Blog.Id" />
                        <div class="form-group">
                            <input type="submit" value="Update" id="btnAddModels" class="btn btn-success name" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

