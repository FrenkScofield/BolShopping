@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/WebCms/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 my-4">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                Contact
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between my-3" style="float:right">
                    <a asp-action="Create" class="btn btn-outline-dark"><i class="fas fa-fw fa-plus"></i> Add Contact</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-shorting" id="dataTable">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th style="width: 13%;"><span style="color:Highlight">Edit</span> - <span style="color:red">Delete</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr data-id="@item.Id">

                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>

                                <td width="230">
                                    @if (item.Description.Length > 40)
                                    {
                                        @Html.Raw(item.Description.Substring(0, 30) + "...")
                                    }
                                    else
                                    {
                                        @Html.Raw(item.Description)
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Addres)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Number)
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn text-primary"><i class="fas fa-fw fa-pencil-alt"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn text-warning" onclick="return confirm('Are you sure you want to delete it')"><i class="fas fa-fw fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

