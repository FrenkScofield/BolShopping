@model BolShpping.Models.VM.UserRegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb-area start -->
<div class="breadcrumb-area breadcramb-bg ptb-80">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="breadcrumb-title">REGISTER</h2>
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Register</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->
<!-- main-content-warpper start -->
<div class="main-content-warpper pt-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <img src="~/img/register/i-register_woman.jpg" alt="Alternate Text" />
             
            </div>
            <div class="col-lg-6  col-md-6 col-sm-12">
                <div class="customer-login-register m-mt-30">
                    <h3>Register</h3>
                    <div class="login-Register-info">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <p class="coupon-input form-row-first">
                                <label>Name <span class="required">*</span></label>
                                <input asp-for="Name" type="text">
                                <span asp-validation-for="Name" class="text-danger"></span>

                            </p>
                            <p class="coupon-input form-row-first">
                                <label>Surname <span class="required">*</span></label>
                                <input type="text" asp-for="Surname">
                                <span asp-validation-for="Surname" class="text-danger"></span>

                            </p>
                            <p class="coupon-input form-row-first">
                                <label>Username <span class="required">*</span></label>
                                <input type="text" asp-for="Username">
                                <span asp-validation-for="Username" class="text-danger"></span>

                            </p>
                            <p class="coupon-input form-row-first">
                                <label>Email <span class="required">*</span></label>
                                <input type="email" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </p>
                            <p class="coupon-input form-row-first">
                                <label>Phone <span class="required">*</span></label>
                                <input type="number" asp-for="Phone">
                                <span asp-validation-for="Phone" class="text-danger"></span>

                            </p>
                            <p class="coupon-input form-row-last">
                                <label>Password <span class="required">*</span></label>
                                <input type="password" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </p>
                            <p class="coupon-input form-row-last">
                                <label>Confirm Password <span class="required">*</span></label>
                                <input type="password" asp-for="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </p>
                            <div class="clear"></div>
                            <p>
                                <button class="button-login" type="submit">Register</button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- main-content-warpper end -->
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}