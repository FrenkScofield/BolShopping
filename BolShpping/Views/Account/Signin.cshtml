@model BolShpping.Models.VM.UserLoginModel

@{
    ViewData["Title"] = "Signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb-area start -->
<div class="breadcrumb-area breadcramb-bg ptb-80">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="breadcrumb-title">Signin</h2>
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Signin</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->
<!-- main-content-warpper start -->
<div class="main-content-warpper pt-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="customer-login-register">
                    <h3>Login</h3>
                    <div class="login-Register-info">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <p class="coupon-input form-row-first">
                                <label>Username or email <span class="required">*</span></label>
                                <input type="text" asp-for="EmailOrUsernaem">
                                <span asp-validation-for="EmailOrUsernaem" class="text-danger"></span>

                            </p>
                            <p class="coupon-input form-row-last">
                                <label>password <span class="required">*</span></label>
                                <input type="password" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </p>
                            <div class="clear"></div>
                            <p>
                                <button value="Login" name="login" class="button-login" type="submit">Login</button>
                                <label><input type="checkbox" asp-for="RememberMe"><span>Remember me</span></label>
                                <a href="#" class="lost-password">Lost your password?</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6  col-md-6 col-sm-12" style=" display: flex;">
                <img src="~/img/register/login-girl.png" alt="Alternate Text" style=" padding-right: 50px;" />
                <div style="border: 1px solid gainsboro;height: 132px; padding: 15px 3px; margin-top: 100px;">
                    <p>If you have not subscribed to our website, you can now be here.</p>
                    <a  class="btn btn-primary" asp-controller="Account" asp-action="Register">Go to Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- main-content-warpper end -->
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

